<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayoutCabecera_CardPistaAnotacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rect"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingVertical="4dp"
            app:srcCompat="@drawable/ic_list" />

        <TextView
            android:id="@+id/lblTituloPista_CardPistaAnotacion"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:text="@string/anotacion"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@drawable/shape_round_rect"
            android:gravity="center"
            android:padding="3dp"
            android:layout_marginStart="2dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_compas"/>
            <TextView
                android:id="@+id/txtRestante_CardPistaAnotacion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/restante"
                android:gravity="center"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/btnViajar_PistaAnotacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_movement"
            android:background="@drawable/shape_circle"
            android:padding="4dp"
            android:layout_marginStart="2dp"/>

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAnotaciones_cardPistaAnotacion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutCabecera_CardPistaAnotacion" />

    <LinearLayout
        android:id="@+id/linearLayoutAgregarAnotacion_CardPistaAnotacion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="12"
        app:layout_constraintTop_toBottomOf="@id/recyclerViewAnotaciones_cardPistaAnotacion">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="11"
            android:gravity="right|center_vertical"
            android:text="@string/agregar_anotacion" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_add_black" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>